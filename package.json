{
  "name": "full-stack-app",
  "version": "1.0.0",
  "main": "index.js",
  "scripts": {
    "start": "ts-node backend/index.ts",
    "server": "nodemon backend/index.ts",
    "client": "yarn --cwd frontend start",
    "dev": "concurrently \"yarn server\" \"yarn client\"",
    "test": "file path",
    "prod": "cross-env CI=false yarn --cwd frontend build && tsc -p . && node backend/dist",
    "update": "yarn --cwd frontend install && yarn install",
    "build": "yarn update && yarn prod"
  },
  "private": true,
  "workspaces": [
    "./frontend"
  ],
  "author": "Prince",
  "license": "MIT",
  "dependencies": {
    "@types/bcryptjs": "^2.4.6",
    "bcryptjs": "^2.4.3",
    "colors.ts": "^1.0.20",
    "cors": "^2.8.5",
    "cross-env": "^7.0.3",
    "dotenv": "^16.4.5",
    "express": "^4.19.2",
    "mongoose": "^8.3.2"
  },
  "devDependencies": {
    "@types/cors": "^2",
    "@types/express": "^4.17.21",
    "@types/node": "^20.12.7",
    "concurrently": "^8.2.2",
    "nodemon": "^3.1.0",
    "ts-node": "^10.9.2",
    "typescript": "^5.4.5"
  }
}
