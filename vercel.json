{
  "version": 2,
  "builds": [
    { "src": "backend/index.ts", "use": "@vercel/node" },
    { "src": "frontend/package.json", "use": "@vercel/static-build", "config": { "distDir": "frontend/build" } }
  ],
  "routes": [
    { "src": "/(.*)", "dest": "/backend/dist/$1" },
    { "src": "/(.*)", "dest": "/frontend/build/$1" }
  ]
}
